<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_id"
    android:orientation="vertical"
    android:fitsSystemWindows="false"
    >


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"

    android:orientation="vertical">

    <EditText
        android:id="@+id/edt_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ten Dang Nhap"></EditText>
    <EditText
        android:layout_below="@+id/edt_user_name"
        android:id="@+id/edt_password"
        android:layout_marginTop="10dp"
       android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mat Khau"></EditText>
    <EditText
        android:layout_below="@+id/edt_password"
        android:id="@+id/edt_user"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ten Nguoi Dung"></EditText>
<Button
    android:layout_below="@id/edt_user"
    android:id="@+id/btn_register"
    android:layout_width="match_parent"
    android:text="Dang Ky"
    android:layout_height="wrap_content">

</Button>
    <Button
        android:layout_below="@id/btn_register"
        android:id="@+id/btn_login_from_register"
        android:layout_width="match_parent"
        android:text="Dang Nhap"
        android:layout_height="wrap_content">

    </Button>

</RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>